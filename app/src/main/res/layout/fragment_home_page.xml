<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_primary"
    android:orientation="vertical">

    <!--    <ImageView-->
    <!--        android:id="@+id/txtTitle"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:scaleType="fitXY"-->
    <!--        android:src="@drawable/ic_bg_primary"-->
    <!--        tools:ignore="HardcodedText" />-->

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/d_8">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/d_8"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/d_8"
            android:background="@drawable/bg_button_circle"
            android:padding="@dimen/d_4"
            android:src="@drawable/ic_baseline_search_24"
            app:tint="@color/black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/d_8"
            android:background="@drawable/bg_button_circle"
            android:padding="@dimen/d_4"
            android:src="@drawable/ic_notifications"
            app:tint="@color/black" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/d_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:minHeight="300dp"
            android:background="@drawable/bg_rounded_8dp_no_ripple">

            <TextView
                android:layout_width="match_parent"
                android:paddingTop="@dimen/d_8"
                android:paddingEnd="@dimen/d_8"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/leading_expert"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/lstExpert"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="HomePageFragment"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />
</LinearLayout>